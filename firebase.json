
{
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": {
      "region": "us-central1",
      "memory": "1GiB",
      "environment": {
        "FIREBASE_SERVICE_ACCOUNT_BASE64": "${env:FIREBASE_SERVICE_ACCOUNT_BASE64}"
      }
    }
  },
  "firestore": {
    "rules": "firestore.rules"
  }
}
